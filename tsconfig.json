{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": { "@/*": ["src/*"] },

        "jsx": "react-jsx",
        "strict": true,

        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "noEmit": true,

        "module": "ESNext",
        "moduleResolution": "bundler",
        "moduleDetection": "force",
        "isolatedModules": true,

        "lib": ["ES2022", "DOM", "DOM.Iterable"]
    },
    "exclude": ["dist", "node_modules"]
}
