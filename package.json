        "lint:fix": "pnpm run lint --fix",
        "stylelint": "stylelint \"src/**/*.{css,scss}\" --fix",
        "ts:check": "pnpm exec tsc --noEmit",
        "storybook": "storybook dev -p 6006",
        "build:storybook": "storybook build",
        "test": "jest"
